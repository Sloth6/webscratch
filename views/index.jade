  .container-fluid
    #content
      #preview.column
        iframe
          link(rel='stylesheet', href="style/preview.css")
      
      #blocks.column
        ul.nav.nav-tabs(id='tabs', data-tabs="tabs")
          li.active: a(href="#tabs-1", data-toggle="tab") Build
          li: a(href="#tabs-2", data-toggle="tab") Control

        #blocksContainer.tab-content
          #tabs-1.tab-pane.active
            ol
              li.draggable
                .block.group
                  p group
              li.draggable
                .block.header
                  p header
                  form: input(type='text',placeholder="I'm a header!")
              li.draggable
                .block.paragraph
                  p paragraph
                  textarea(placeholder="I'm a paragraph!", rows=3)
          #tabs-2.tab-pane
            ul.nav.nav-pills.nav-stacked
              li.active: a(href="#") Selectors
              li: a(href="#") Control
              li: a(href="#") Data
              li: a(href="#") Operators
 
   
      #sandbox.column
        ol.sortable.root
          li.ui-state-disabled
            .block.group
              p document
